{% extends ':layout:layouterp.html.twig' %}

{% block title -%}<title> ARIASTORE | Historial de pedidos </title>{% endblock %}

{% block customcss %}
    <link rel="stylesheet" href="{{ asset('Resources/customscss/salestage.css') }}">
    <link rel="stylesheet" href="{{ asset('Resources/slider/css/bootstrap-slider.min.css') }}">
{% endblock %}
{% block descripcion %}
     <div class="col-md-6">
          <p class="robo" style="font-weight: 300; margin-bottom: 0px; font-size: 30px;">Historial de pedidos</p>
          <p class="robo" style="font-weight: 300; font-size: 14px; ">Se muestran todos los pedidos que se han realizado.</p>
     </div>

{% endblock %}
{% block acciones %}
     
{% endblock acciones %}

{% block navegacion %}
    <a href="{{ path('admin_historial_pedidos') }}" class="leftnava"><li class="leftnav left active">Historial pedidos<span class="pull-right right"><i class="fa fa-arrow-right"></i></span></li></a>
{% endblock %}

{% block contenido %}
    <div class="col-md-12 col-xs-12">
        <table id="historialPedidos" class="mdl-data-table dataTable" width="100%" cellspacing="0" style="text-align:left;">
            <thead>
                <tr role="row">
                    {#<th style="width: 20px; padding-left: 8px;"><input type="checkbox" name="checktodos" onclick = "seleccionarTodo();"></th> #}
                    <th style="text-align: center; {#width: 15%;#}">Fecha de pedido</th>
                    <th style="text-align: center; {#width: 35%;#}">Cliente</th>
                    <th style="text-align: center; {#width: 40%;#}">Dirección de envío</th>
                    <th style="text-align: center; {#width: 10%;#}">Total cancelado + shipping ($)</th>
                </tr>
            </thead>
        </table>
    </div>   
{% endblock %}    

{% block js_extend %}
    <script type="text/javascript" src="{{ asset('Resources/animations/funciones.js') }}"></script> 
    <script type="text/javascript" src="{{ asset('Resources/animations/pedidos/pedidos.js') }}"></script> 
    <script type="text/javascript">
        $(document).ready(function() {
            $('#departamento').select2();
            
            /////Definición datatable
            var table = $('#historialPedidos').DataTable({
                dom:'ftp',
                "processing": false,
                "serverSide": true,
                "ajax": {
                        "url": Routing.generate('admin_historialpedidos_data'),
                        "type": 'GET'
                },
                "columns": [
                        //{ "data": "check" },
                        { "data": "fecha" },
                        { "data": "cliente" },
                        { "data": "direccion" },
                        { "data": "total" }
                ],
                "order":[0,'asc'],
                {#"order":[1,'asc'],#}
                {#"columnDefs": [
                        { "orderable": false, "targets":  }
                ],#}
                "language": {
                        "info": "{{dtInfo}} _PAGE_ de _PAGES_",
                        "infoEmpty": "{{dtInfoEmpty}}",
                        "zeroRecords": "{{dtZeroRecords}}",
                        "emptyTable": "{{dtEmptyTable}}",
                        "paginate": { 
                            "next": "{{dtNext}}",
                            "previous": "{{dtPrev}}"
                        },
                        "processing": "{{dtProcessing}}",
                        "search": "{{dtSearch}}",
                        "lengthMenu": "{{dtLengthMenu}} _MENU_ registros"
                    }
            });
            /////Fin definición datatable 
        });
    </script>
{% endblock %}