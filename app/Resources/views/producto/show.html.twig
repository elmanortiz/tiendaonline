{% extends 'base.html.twig' %}

{% block body %}
    <h1>Producto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ producto.nombre }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ producto.precio }}</td>
            </tr>
            <tr>
                <th>Numeroreferencia</th>
                <td>{{ producto.numeroreferencia }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{% if producto.estado %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ producto.descripcion }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ producto.link }}</td>
            </tr>
            <tr>
                <th>Ingredientes</th>
                <td>{{ producto.ingredientes }}</td>
            </tr>
            <tr>
                <th>Presentacion</th>
                <td>{{ producto.presentacion }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ producto.stock }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_producto_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_producto_edit', { 'id': producto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
